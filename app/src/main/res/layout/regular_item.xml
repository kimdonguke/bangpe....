<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/regular_item_maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앙기모띠"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="25dp"
        android:textSize="26sp"
        android:layout_marginLeft="10dp"
        android:textColor="#111"
        />
    <TextView
        android:id="@+id/regular_item_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/regular_item_maintext"
        app:layout_constraintBottom_toBottomOf="@+id/regular_item_maintext"
        app:layout_constraintLeft_toRightOf="@+id/regular_item_maintext"
        android:text="asdfadsfasdfasdf"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/regular_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019.11.11"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/regular_item_maintext"
        />
</android.support.constraint.ConstraintLayout>