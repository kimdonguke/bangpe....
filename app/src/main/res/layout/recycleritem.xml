<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:id="@+id/item_imageview"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/item_imageview"
        app:layout_constraintTop_toTopOf="@id/item_imageview"
        android:textSize="24sp"
        android:text="네이스~"
        android:layout_marginLeft="15dp"
        android:id="@+id/title_text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_imageview"
        app:layout_constraintLeft_toLeftOf="@+id/title_text"
        android:text="이잉 기모링"
        android:id="@+id/description_text"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
      app:layout_constraintTop_toBottomOf="@+id/item_imageview"
        android:background="#111"
        android:layout_marginTop="16dp"
        />

</android.support.constraint.ConstraintLayout>